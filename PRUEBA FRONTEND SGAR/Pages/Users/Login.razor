@page "/login-user"
@inject AuthSeguridadService AuthSeguridadService
@inject NavigationManager Navigation
@inject IJSRuntime JS

@using PRUEBA_FRONTEND_SGAR.Models
@using PRUEBA_FRONTEND_SGAR.Services

<style>
    .form-control {
        border: 2px solid #ccc !important;
        border-radius: 10px !important;
        padding-left: 40px;
    }

        .form-control:focus {
            border-color: #6c757d !important;
            box-shadow: 0 0 8px rgba(108, 117, 125, 0.5) !important;
        }

    .card {
        border: 2px solid #ccc !important;
        box-shadow: 0px 2px 6px rgba(0, 0, 0, 0.1) !important;
        border-radius: 20px !important;
    }

    .input-group {
        position: relative;
        width: 100%;
    }

        .input-group .input-group-text {
            position: absolute;
            top: 50%;
            left: 10px;
            transform: translateY(-50%);
            background: none !important;
            border: none !important;
            z-index: 10;
        }

    .input-group-text i {
        font-size: 18px;
        color: #6c757d;
    }

    .input-label {
        position: absolute;
        top: -10px;
        left: 10px;
        font-size: 14px;
        color: #6c757d;
        background-color: white;
        padding: 0 5px;
        z-index: 5;
    }

    /* === Estilo del botón con orejitas === */
    .contenedor-boton {
        position: relative;
        display: inline-block;
        margin: 15px;
    }

    .boton-mapacheAceptar {
        border: 2px solid transparent;
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
        border-radius: 10px;
        height: 50px;
        width: 115px;
        background-color: #b0abab;
        color: #fff;
        transition: all 0.3s ease;
    }

        .boton-mapacheAceptar:hover {
            border: 3px solid black;
            font-weight: bold;
            background-color: #000;
        }

    .oreja {
        position: absolute;
        width: 30px;
        height: 30px;
        display: none;
        transition: transform 0.3s ease;
    }

    .oreja-izquierda {
        top: -25px;
        left: 5px;
    }

    .oreja-derecha {
        top: -25px;
        right: 5px;
    }

    .contenedor-boton:hover .oreja {
        display: block;
        transform: translateY(-5px);
    }
</style>

<div class="row mb-4">
    <div class="col-md-6 mx-auto">
        <div class="card p-3 rounded-4">
            <div class="card-body">
                <!-- Logo -->
                <div class="d-flex justify-content-center mb-3">
                    <img src="css/sgarlogo.jpeg" width="200" height="200" />
                </div>

                <EditForm Model="@credenciales" OnValidSubmit="@IniciarSesion">
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <!-- Campo Email -->
                    <div class="form-group mb-3 position-relative">
                        <div class="input-group">
                            <InputText @bind-Value="credenciales.Email"
                                       class="form-control border-start-0 rounded-3 ps-6 pe-4"
                                       placeholder="mail@example.com"
                                       autocomplete="email" />
                            <span class="input-group-text">
                                <i class="bi bi-person"></i>
                            </span>
                        </div>
                        <label class="input-label required">Correo</label>
                    </div>

                    <!-- Campo Password -->
                    <div class="form-group mb-4 position-relative">
                        <div class="input-group">
                            <InputText @bind-Value="credenciales.Password"
                                       type="password"
                                       id="password"
                                       class="form-control border-start-0 rounded-3 ps-6 pe-4"
                                       placeholder="*****"
                                       autocomplete="current-password" />
                            <span class="input-group-text">
                                <i class="bi bi-lock"></i>
                            </span>
                        </div>
                        <label class="input-label required">Contraseña</label>
                    </div>

                    <!-- Botón Login -->
                    <div class="d-flex justify-content-center">
                        <div class="contenedor-boton">
                            <button type="submit" class="boton-mapacheAceptar text-center">Aceptar</button>
                            <img src="css/orejaIz.png" alt="Oreja izquierda" class="oreja oreja-izquierda">
                            <img src="css/orejaDe.png" alt="Oreja derecha" class="oreja oreja-derecha">
                        </div>
                    </div>
                </EditForm>

                @if (!string.IsNullOrEmpty(errorMensaje))
                {
                    <div class="alert alert-danger text-center mt-3">@errorMensaje</div>
                }

                <div class="d-flex justify-content-center mt-3">
                    <p>¿No tienes cuenta? <a href="/registrar">Regístrate.</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private CredencialesRequest credenciales = new();
    private string? errorMensaje;

    private async Task IniciarSesion()
    {
        errorMensaje = null;

        // Llamamos al servicio de autenticación
        var token = await AuthSeguridadService.LoginAsync(credenciales);

        if (string.IsNullOrEmpty(token))
        {
            errorMensaje = "Credenciales inválidas. Verifica tu correo y contraseña.";
            return;
        }

        //Decodificar token (según claims del backend)
        var jwt = await AuthSeguridadService.ObtenerTokenDecodificado();

        var email = jwt?.Claims.FirstOrDefault(c => c.Type == "email")?.Value;
        var rol = jwt?.Claims.FirstOrDefault(c => c.Type == "role")?.Value;
        var userId = jwt?.Claims.FirstOrDefault(c => c.Type == "nameid")?.Value;

        Console.WriteLine($"Usuario logueado: {email} - Rol: {rol} - Id: {userId}");

        // Guardar info útil en localStorage
        await JS.InvokeVoidAsync("localStorage.setItem", "userEmail", email ?? "");
        await JS.InvokeVoidAsync("localStorage.setItem", "userRole", rol ?? "");
        await JS.InvokeVoidAsync("localStorage.setItem", "userId", userId ?? "");

        // Redirigir a página principal
        Navigation.NavigateTo("/home", true);
    }
}






























